[flake8]
# Maximum line length
max-line-length = 88

# Maximum complexity for functions
max-complexity = 10

# Exclude directories and files
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    .tox,
    .nox,
    .mypy_cache,
    .ruff_cache

# Ignore specific error codes
ignore = 
    # Line length (handled by Black)
    E501,
    # Import not at top of file (handled by isort)
    E402,
    # Module level import not at top of file
    E402,
    # Do not assign a lambda expression, use a def
    E731,
    # Do not use bare except
    E722,
    # Do not use bare except, specify exception instead
    E722,
    # Multiple imports on one line
    E401,
    # Unused imports (handled by Ruff)
    F401,
    # Module level import not at top of file
    E402,
    # Line break before binary operator
    W503,
    # Line break after binary operator
    W504

# Select specific error codes to check
select = 
    E,    # pycodestyle errors
    W,    # pycodestyle warnings
    F,    # pyflakes
    C90,  # mccabe complexity

# Per-file-ignores
per-file-ignores = 
    __init__.py:F401
    tests/*:E501,W503,W504

# Show source code for each error
show-source = True

# Show the error codes
show-pep8 = False

# Count errors
count = False

# Statistics
statistics = False

# Verbose output
verbose = False

# Quiet mode
quiet = False
